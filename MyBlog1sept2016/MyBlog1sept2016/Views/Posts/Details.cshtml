@model MyBlog1sept2016.Models.Post

@using MyBlog1sept2016.Classes;
@{
    ViewBag.Title = "Details";
    
}

<h2>Детайли</h2>

<div>
    <h4>Публикация</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Заглавие
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            Съдържание
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Body)
        </dd>

        <dt>
            Дата
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt>
            Автор
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Author.UserName) (@Html.DisplayFor(model => model.Author.Fullname))
        </dd>
    </dl>
</div>
<p>
    @if (User.IsInRole("Administrator"))
    {
        @Html.ActionLink("Редакция", "Edit", new { id = Model.Id }) @:|
    }
    
    @Html.ActionLink("Обратно към Публикации", "Index")
</p>
