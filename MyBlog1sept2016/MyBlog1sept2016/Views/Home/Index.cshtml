@model List<MyBlog1sept2016.Models.Post>
@using MyBlog1sept2016.Classes;
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    @foreach (var post in Model)
    {
        ViewBag.PostTitle = post.Title;
            <div class="post col-md-6">
                <h2 class="title"><a href="~/Posts/Details/@post.Id">@post.Title</a></h2>
                <div class="about">
                    Публикувано
                    @if (post.Author != null)
                    {
                        @: от
                        <i>@post.Author.Fullname (@post.Author.UserName)</i>
                    }

                    на <i>@post.Date</i>
                </div>
                <div class="body">@Html.Raw(Utils.CutText(post.Body, 250)) </div>
              
            </div>
        
    }
  
   
</div>